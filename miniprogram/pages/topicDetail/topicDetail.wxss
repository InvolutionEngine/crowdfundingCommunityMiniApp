/* pages/topicDetail/topicDetail.wxss */
.TitleBox{
  background-color: #fff;
  width: 100%;
  height: auto;
  /* background-color: aqua; */
  /* border-bottom: 1rpx solid #b9b9b9; */
}
.TitleBox-busBox{
  width: 94%;
  height: 150rpx;
  margin-left: 3vw;
  margin-top: 40rpx;
}
.TitleBox-busBox-busImg{
  width: 150rpx;
  height: 150rpx;
  border-radius: 15%;
}
.TitleBox-busBox-Meg{
  width: 520rpx;
  height: 150rpx;
  margin-left: 20rpx;
}
.TitleBox-proposition{
  width: 520rpx;
  height: 50rpx;
  font-size: 32rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.TitleBox-flowNum{
  width: 220rpx;
  height: 40rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
  line-height: 40rpx ;
  color: #6e6e6e;
}
.TitleBox-length{
  width: 300rpx;
  height: 40rpx;
  margin-left: 10rpx;
  font-size: 28rpx;
  line-height: 40rpx ;
  color: #6e6e6e;
}
.TitleBox-busName{
  width: 220rpx;
  height: 60rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
  line-height: 60rpx ;
  color: #586B94;
}
.TitleBox-pubTime{
  height: 60rpx;
  line-height: 60rpx;
  color: #6e6e6e;
  font-size: 28rpx;
}


.TitleBox-content{
  margin-top: 20rpx;
  margin-left: 2vw;
  width: 96%;
  font-size: 26rpx;
  color: #525151;

  text-overflow: ellipsis;

  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;

  display: -moz-box;
  -moz-line-clamp: 3;
  -moz-box-orient: vertical;

  overflow-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}
.TitleBox-content_open{
  margin-top: 20rpx;
  margin-left: 2vw;
  width: 96%;
  font-size: 26rpx;
  color: #525151;

}
/*  */
.content {
  margin-left: 5rpx;
  text-align: justify;
  margin-top: 30rpx;
}
.item {
  background-color: #fff;
  margin: 10rpx 3%;
  margin-bottom: 20rpx;
  display: inline-block;
  width: 96%;
  border-radius: 20rpx;
  overflow: hidden;
}
.item-ava {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}
.heart {
  width: 30rpx;
  height: 26rpx;
  margin-right: 8rpx;
}
.heart {
  display: flex;
  align-items: center;
}
.item-img {
  width: 100%
}
.item-video{
  width: 100%;
}
.item-title {
  font-size: 30rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-family: 'PingFang SC-Medium';
  color: #1e1e1e;
  margin: 15rpx 15rpx 10rpx 15rpx;
}
.item-title-weight{
  font-size: 30rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  font-family: 'PingFang SC-Medium';
  color: #1e1e1e;
  margin: 15rpx 15rpx 10rpx 15rpx;
  font-weight: 600;
}
.item .name {
  display: flex;
  padding: 0 15rpx;
  margin-top: 15rpx;
  padding-bottom: 10rpx;
  align-items: center;
  font-size: 24rpx;
  color: #1e1e1e;
  font-family: 'PingFang SC-Medium';
}
.name image {
  flex: 0 0 auto;
}
.item-title-box {
  display: flex;
  position: relative;
}
.item-text-box {
  display: flex;
  position: relative;
}
.name-title {
  flex: 1;
  margin-left: 18rpx;
  margin-right: 20rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}
.name text:last-child {
  color: #c4c4c4;
  text-decoration: underline;
  line-height: 10rpx;
}
.left,
.right {
  display: inline-block;
  vertical-align: top;
  width: 49%;
}