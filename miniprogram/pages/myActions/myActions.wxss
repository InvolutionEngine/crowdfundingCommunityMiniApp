/* pages/myActions/myActions.wxss */
.showBox{
  width: 100%;
  height: auto;
}
.showBoxItem{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  /* box-shadow: 5rpx 5rpx 5rpx 10rpx #7f7f7f; */
  box-shadow: 5rpx 5rpx 8rpx #888888;
  width: 94%;
  margin-left: 3vw;
  height: 170rpx;

  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.showBoxItem_img{
  width: 150rpx;
  height: 150rpx;
}
.showBoxItem-contentBox{
  width: 550rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}
.topicAndtime{
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.topicBox{
  margin-left: 5rpx;
  font-size: 24rpx;
  color: #20894d;
}
.timeBox{
  font-size: 22rpx;
  margin-right: 10rpx;
  color: #7f7f7f;
}
.textAndnum{
  width: 100%;
  height: 120rpx;

}
.textBox{
  margin-left: 10rpx;
  height: 60rpx;
  font-size: 23rpx;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.numBox{
  margin-top: 10rpx;
  margin-left: 10rpx;
  height: 50rpx;
  font-size: 23rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.numBox-text{
  margin-right: 20rpx;
  color: #7f7f7f;
  line-height: 50rpx;
  text-align: center;
}
.deleteBtn{
  display: inline-block;
  margin-right: 10rpx;
  width: 80rpx;
  height: 40rpx;
  background-color: #c76079;
  text-align: center;
  line-height: 40rpx;
  color: #fff;
}
