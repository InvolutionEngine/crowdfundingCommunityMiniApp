/* pages/add/add.wxss */
/* 前置 */
.head-wrap{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 80rpx;
  padding-top: 20rpx;
  /* margin-top: 10rpx; */
  background-color: #eff2f7;
}
.bc-text{
  width: 600rpx;
  height: 60rpx;
  margin-left: 10rpx;
  line-height: 60rpx;
  color: #20894d;
  font-size: 28rpx;
}
/* 话题按钮 */
.subject-text{
  /* background-color: #07c160; */
  background-color: #eff2f7;
  color: #121212;
  width: 100rpx;
  height: 60rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 32rpx;
  padding-right: 20rpx;
}
.subject-text_button{
  /* background-color: #07c160; */
  background-color: #ffe200;
  color: #121212;
  width: 85rpx;
  height: 60rpx;
  margin-right: 15rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 32rpx;
}
.title{
  margin: 20rpx 40rpx;
}
.title-text{
  width: 100%;
  /* 这里决定书写区的高度 */
  height: 50rpx;
  font-weight: 600;
  line-height: 50rpx;
}
.shadowbanner{
  width: 100%;
  height: 30rpx;
  background-color: #eff2f7;
}
/* 输入框 */
.input-wrap{
  margin: 20rpx 40rpx;
  /* border: 1rpx solid black; */
}
.input-text{
  width: 100%;
  /* 这里决定书写区的高度 */
  height: 280rpx;
}
/* 图片 */
.img-wrap{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 20rpx 30rpx;
  background-color: #eff2f7;
}
.one-img{
  position: relative;
  margin: 4rpx 8rpx;
}
.choose-img{
  width: 210rpx;
  height: 210rpx;
}
.delete-img{
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  width: 30rpx;
  height: 30rpx;
}
.public_btn{
  padding: 100rpx;
  padding-top: 50rpx;
  /* padding-left: 70rpx;
  padding-right: 70rpx; */
}
.choose-location{
  margin-left: 40rpx;
  margin-top: 40rpx;
  font-size: 36rpx;
  color: #888888;
}

.case{
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 5rpx 5rpx 10rpx #888888;
  margin-top: 20rpx; 
}

.topicBox{
  width: 96%;
  height: 600rpx;
  /* background-color: #ffffff; */
  background-color: #fff;
  position: fixed;
  top: 75rpx;
  z-index: 999;
}

.topic_left_eare{
  /* width: 120rpx;
  height: 50rpx;
  margin-bottom: 10rpx; */
  height: 70rpx;
  line-height: 75rpx;
  margin-bottom: 20rpx;
  font-size: 26rpx;
  text-align: center;
}

.topic_right_eare{
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 30rpx;
}
.select_Topic{
  border-bottom: 6rpx solid #ffe200;
  /* padding: 0rpx 30rpx; */
}
.videoShow{
  width: 100%;
}